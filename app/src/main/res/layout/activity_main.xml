<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation= "vertical">
    <TextView
        android:text="getCacheDir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
    <TextView
        android:text="getFilesDir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
    <TextView
        android:text="getExternalStorageDirectory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getExternalCacheDir" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getExternalFilesDir" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px"
        />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="onDeleteCache"
        android:text="删除内置cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="onDeleteFiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除内置files" />

    <Button
        android:onClick="onDeleteSdCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除SD卡cache" />

    <Button
        android:onClick="onDeleteSdFiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除SD卡files" />

</LinearLayout>
